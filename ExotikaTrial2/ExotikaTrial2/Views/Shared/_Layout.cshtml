    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div>
            <i class="fa fa-facebook-square fa-custom1 fa-2x"></i>
            <i class="fa fa-twitter-square fa-custom2 fa-2x"></i>
            <i class="fa fa-instagram fa-custom3 fa-2x"></i>
            <i class="fa fa-envelope fa-custom4 fa-2x"></i>
            <i class="fa fa-linkedin-square fa-custom5 fa-2x"></i>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/js/NavigationBar.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <partial name="_Notification" />
    @RenderSection("Scripts", false);

