@model ExotikaTrial2.Models.Feedback


<div style="padding: 10vh;">
    <div style="padding: 10vh; background-color:rgb(255,255,255); border: 2px solid rgb(0,0,0); border-radius: 12px;">


        <form method="post" asp-action="UpsertFeedback" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <input asp-for="forId" type="hidden" />
            <input asp-for="byId" type="hidden" />
            @*<div class="row">*@
                <div class=" row col-12">
                    <div class="col-12 pb-2 mb-4">
                        <h2 class="text-primary">@(Model.Id!=0?"Edit":"Post") Feedback</h2>
                        <hr />
                    </div>
                    @*<div asp-validation-summary="All"></div>*@
                    <div class="mb-4 col-6">
                        <label asp-for="Rating"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="mb-4 col-12">
                        <label asp-for="FeedbackMsg"></label>
                        <textarea asp-for="FeedbackMsg" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="FeedbackMsg" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="col-12 mt-3">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn1" style="width:150px">Update</button>
                        }
                        else
                        {
                            <button type="submit" onclick="return ValidateInput()" class="btn1" style="width:150px">Post</button>
                        }
                        <a asp-controller="Requirements" asp-action="OngoingContracts" class="btn1" style="width:150px">Back to List</a>
                    </div>
                </div>
            @*</div>*@
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

