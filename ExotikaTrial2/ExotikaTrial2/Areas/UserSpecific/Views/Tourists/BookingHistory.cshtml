@model IEnumerable<ExotikaTrial2.Models.ResortBookings>

@{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
}

<section id="Details">
    <div class="d-flex justify-content-between pt-4">
        <div class="p-2 mb-5">
            <h1 class="text-primary">Your Booking History</h1>
        </div>
    </div>
    <div class="mt-5 mb-5" style="width: 100%">
        <table id="tblData" class="display table table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Package</th>
                    <th>Resort</th>
                    <th>City</th>
                    <th>Booking Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.Package.Name</td>
                        <td>@booking.Resort.Name</td>
                        <td>@booking.Resort.City, @booking.Resort.State</td>
                        <td>@booking.CreateDate.ToLongDateString()</td>
                        <td>
                            <a asp-action="BookingDetail" asp-route-bookingId="@booking.BookingID" style="display:block">View Details</a>
                            <a asp-action="UpsertFeedback" asp-route-forID="@booking.Package.ResortId">Give or Edit Feedback</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script>
       $(document).ready(function () {
           $('#tblData').DataTable();
       });
    </script>
}