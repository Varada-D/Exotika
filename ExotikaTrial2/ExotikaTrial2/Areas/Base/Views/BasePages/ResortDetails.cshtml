@model ExotikaTrial2.Models.ViewModels.ResortDetailsVM

@{
    Layout = "_Layout";
    <link rel="stylesheet" href="~/css/ResortCSS.css"  runat="server"/>
} 



<section class="container">
    <div class="left-column fade">
        <span id="text"></span>
    </div>

    <div class="right-column">
        <div class="product-description">
            <h1>@Model.resort.Name</h1><br><br>
            <h2>Tagline</h2>
            <p>@Model.resort.StreetAddress, <br />@Model.resort.City, <br />@Model.resort.State - @Model.resort.PostalCode</p>
        </div>
        <br><br>
        <div class="product-price">
            <span>Rs. 1500/day/head</span>
            <button onclick="BookNow()" class="cart-btn">Book Now</button>
        </div>
    </div>
</section>
<br>
<br>
<div class="overview-boxes">

